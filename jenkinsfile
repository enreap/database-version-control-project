pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yourusername/my-database-project.git'
            }
        }

        stage('Liquibase Update') {
            steps {
                sh 'liquibase --defaultsFile=liquibase.properties update'
            }
        }

        stage('Liquibase Rollback (Optional)') {
            steps {
                // Example: rollback last changeSet
                // sh 'liquibase --defaultsFile=liquibase.properties rollbackCount 1'
            }
        }
    }
}
